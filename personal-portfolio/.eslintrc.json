{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:angular/johnpapa"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "angular"
  ],
  "rules": {
    "angular/no-service-method": "off",
    "angular/component-class-suffix": "error",
    "angular/no-inline-template": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}